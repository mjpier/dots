XF86MonBrightness{Up,Down}
	brightnessctl s 10{+,-}

XF86AudioRaiseVolume
	pamixer -i 10 --allow-boost && notify-send "Increased Volume"

XF86AudioLowerVolume
	pamixer -d 10 --allow-boost && notify-send "Decreased Volume"

XF86AudioMute
	pamixer --toggle-mute && notify-send "Muted/Unmuted Audio"

XF86AudioPlay
	playerctl play-pause

XF86AudioNext
	playerctl next

XF86AudioPrev
	playerctl previous

super + Return
	alacritty

super + e
	thunar

super + w
	brave

super + r
	dmenu_run

Print
	flameshot gui

super + shift + d
	$HOME/.local/bin/list_of_dmenu_commands
