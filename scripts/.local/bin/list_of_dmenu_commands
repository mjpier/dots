#!/bin/sh

menu(){
    printf "1. dmemoji: List of emoji to copy paste\n"
    printf "2. dmkaomoji: List of kaomoji to copy paste\n"
    printf "3. dmlogout: Do all the nasty stuff\n"
    printf "4. dmwall: Download wallpapers from wallhaven\n"
    printf "5. setbg: SetBG\n"
    printf "6. sxbm_dmenu: Simple X Bookmark Manager\n"
}

choice=$(menu | dmenu -p "Run:" -l 20 | cut -d. -f1)

case $choice in
    1)
    ~/.local/bin/dmemoji
    break
    2)
    ~/.local/bin/dmkaomoji
    break
    ;;
    3)
    ~/.local/bin/dmlogout
    break
    ;;
    4)
    ~/.local/bin/dmwall
    break
    ;;
    5)
    ~/.local/bin/setbg
    break
    ;;
    6)
    sxbm_dmenu
    break
    ;;
    *)
    ;;
esac
