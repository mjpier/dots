set sandbox none
set statusbar-h-padding 10
set statusbar-v-padding 10
set page-padding 1
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map = zoom in
map - zoom out
map r reload
map R rotate
map i recolor

set window-title-basename "true"
set selection-clipboard "clipboard"

set notification-error-bg       "#cc241d" # Red
set notification-error-fg       "#ebdbb2" # Foreground
set notification-warning-bg     "#d79921" # Orange
set notification-warning-fg     "#928374" # Selection
set notification-bg             "#282828" # Background
set notification-fg             "#ebdbb2" # Foreground

set completion-bg               "#282828" # Background
set completion-fg               "#689d6a" # Comment
set completion-group-bg         "#282828" # Background
set completion-group-fg         "#689d6a" # Comment
set completion-highlight-bg     "#928374" # Selection
set completion-highlight-fg     "#ebdbb2" # Foreground

set index-bg                    "#282828" # Background
set index-fg                    "#ebdbb2" # Foreground
set index-active-bg             "#928374" # Current Line
set index-active-fg             "#ebdbb2" # Foreground

set inputbar-bg                 "#282828" # Background
set inputbar-fg                 "#ebdbb2" # Foreground
set statusbar-bg                "#282828" # Background
set statusbar-fg                "#ebdbb2" # Foreground

set highlight-color             "#d79921" # Orange
set highlight-active-color      "#b16286" # Pink

set default-bg                  "#282828" # Background
set default-fg                  "#ebdbb2" # Foreground

set render-loading              true
set render-loading-fg           "#282828" # Background
set render-loading-bg           "#ebdbb2" # Foreground

### Recolor mode settings ###
set recolor-lightcolor          "#282828" # Background
set recolor-darkcolor           "#ebdbb2" # Foreground


### Startup options ###
set adjust-open width
