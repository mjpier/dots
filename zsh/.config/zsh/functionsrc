fcd() {
cd "$(find -type d | fzf)"
}

fopen() {
xdg-open "$(find -type f | fzf)"
}

fhistory() {
history | cut -c 8- | sort | uniq | fzf | tr -d '\n' | xclip -selection c
}

countdown() {
date1=$((`date +%s` + $1)); 
while [ "$date1" -ge `date +%s` ]; do 
echo -ne "$(date -u --date @$(($date1 - `date +%s`)) +%H:%M:%S)\r";
sleep 0.1
done
}

stopwatch() {
date1=`date +%s`; 
while true; do 
echo -ne "$(date -u --date @$((`date +%s` - $date1)) +%H:%M:%S)\r"; 
sleep 0.1
done
}
